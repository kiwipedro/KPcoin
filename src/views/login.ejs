    <div class="container">

        <div class="text-center">
            <div class="row">
                <br>

                <div class="col-md-4 col-sm-4 text-center">
                    Log In

                    <!-- LOG IN FORM -->
                    <form id="login_form" action="/login" method="post">

                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" required>

                        </div>



                        <div class="g-recaptcha" data-sitekey="6LeMaywUAAAAAKbE5TnJ3Xm_QPxpCwNFFQu6FHZw" required></div>
                        </br>

                        <button type="submit" class="btn btn-success btn-lg">Login</button>
                        <% if (message.length > 0) { %>
                            </br>
                            </br>
                            <div class="alert alert-danger form-group">
                                <%= message %>
                            </div>
                            <% } %>

                                <% if (message3.length > 0) { %>
                                    </br>
                                    </br>
                                    <div class="alert alert-warning form-group">
                                        <%= message3 %>
                                    </div>
                                    <% } %>

                                        <% if (message4.length > 0) { %>
                                            </br>
                                            </br>
                                            <div class="alert alert-warning form-group">
                                                <%= message4 %>
                                            </div>
                                            <% } %>

                                                </br>
                                                </br>
                                                <a href="/password-reset-prompt">Forgot Password?</a>


                    </form>

                    <div class="col-md-4 col-sm-4 text-center">
                    </div>

                    </form>



                </div>
                <div class="col-md-4 col-sm-4 text-center">
                    Sign Up
                    <!-- SIGN UP FORM -->
                    <form action="/signup" method="post">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" onchange="form.confirmpassword.pattern = this.value;" oninvalid="this.setCustomValidity('Password must be at least 6 characters with at least one uppercase letter')" oninput="setCustomValidity('')">
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" class="form-control" name="confirmpassword" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" oninvalid="this.setCustomValidity('Password must match')" oninput="setCustomValidity('')">
                        </div>
                        <button type="submit" class="btn btn-info btn-lg">Sign Up</button>

                        <% if (message2.length > 0) { %>
                            </br>
                            </br>
                            <div class="alert alert-danger form-group">
                                <%= message2 %>
                            </div>
                            <% } %>



                    </form>
                </div>
                <div class="col-xs-3"></div>
            </div>
        </div>

