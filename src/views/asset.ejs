<main>

<div class="splash__no-background">  
<% var walletObj = JSON.parse(wallet) %>
<% var balance = walletObj.state.confirmed %>
  
  <div class="copy__block-inverted">
  
        <h3><%=asset[0].name%></h3>
          <br>
            <span id="boxshadow"><img alt="" src="../<%=asset[0].thumbpath%>"></span>
         <br>
          <br>
        <div class="copy__block-center-small">
            <span><small><%=asset[0].shortdesc%></small></span>
            </div>
          <br>
           <h3> Price: <%=asset[0].price%>P (<%=asset[0].price/100000000%>KPc) </h3>
          <br>
           <span style="color:lightgrey"><small>Your current balance is: <%=balance%>P (<%=balance/100000000%>KPc)</small></span> 
            <% if (balancemessage.length > 0) { %>
            <br>
            <br>
            <div class="alert alert-danger form-group">
            <%= balancemessage %>
            </div>
         <% } %> 
    </div>
    
     <div class="copy__center-block">
      <% if (balance < asset[0].price) { %>
        <div id="funding-problem">
            <br>
            <br>
            Ooops, looks like you don't have enough funds to complete this purchase
            <br>
            Why not log out and log back in to receive some more gift coins and try again?
            <br>
            <br>
            <br>
        </div>
    <%} else { %>      
         <div class="copy__center-block">
             <br>           
             <p class="black__font">To receive the full version (emailed to you) click the button below</p>                             
             <form action="/transaction-result?assetid=<%=asset[0].id%>&balance=<%-balance%>&price=<%-asset[0].price%>&assetname=<%=asset[0].name%>&assettb=<%=asset[0].thumbpath%>" method="post">
             <div class="account-buttons center-aligned">
                <div class="account-button">    
                    <button type="submit" class="account-button__button">Buy!</button>
                </div>
                </div>
             </form>
             <br>
                <p class="copy__block-left-small">Friendly reminder: all artwork on this site remains the property of the artist and cannot be re-distrubted, re-used or sold without their explicit consent</p>
            <br>
          </div> 
         <%}%>
      </div>   
    </div>
                    
